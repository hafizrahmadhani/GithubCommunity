<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".UserDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_account_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/user1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="name"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="username"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Followers"/>

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/tv_followers"
                android:layout_toRightOf="@id/tv_followers"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Following" />

            <TextView
                android:id="@+id/tv_repo"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/tv_following"
                android:layout_toRightOf="@id/tv_following"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Repository" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/followers"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="56995"/>

            <TextView
                android:id="@+id/following"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="12" />

            <TextView
                android:id="@+id/repo"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="102" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_company"/>
            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google, Inc."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_location"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pittsburgh, PA, USA"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>